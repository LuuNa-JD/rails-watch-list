<div class="banner">
  <h1>Welcome to your Movies List</h1>
</div>
<div class="create-list-button">
  <%= link_to "Add a new list", new_list_path, class: "button" %>
</div>
<main>
  <div class="container">
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card">
            <% if list.photo.key.present? %>
              <div class="list-image" style="background-image: url(<%= cl_image_path list.photo.key %>)"></div>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
