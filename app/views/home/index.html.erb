<div class="banner">
  <h1>Welcome to your Movies List </h1>
</div>
<div class="create-list-button">
    <%= link_to "Add a new list", new_list_path, class: "button" %>
  </div>
<main>
  <div class="container">
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card">
            <% link_to list.name %>
            <div class="list-image" style="background-image"></div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
